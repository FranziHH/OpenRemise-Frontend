{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 25,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "Release",
            "binaryDir": "${sourceDir}/build"
        },
        {
            "name": "Debug",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "OPENREMISE_FRONTEND_BUILD_DOCS": "OFF"
            }
        },
        {
            "name": "Demo",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "OPENREMISE_FRONTEND_BASE_HREF": "/Frontend/demo/",
                "OPENREMISE_FRONTEND_FAKE_SERVICES": "true"
            }
        },
        {
            "name": "Demo (localhost)",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "OPENREMISE_FRONTEND_BASE_HREF": "/demo/",
                "OPENREMISE_FRONTEND_FAKE_SERVICES": "true"
            }
        }
    ]
}