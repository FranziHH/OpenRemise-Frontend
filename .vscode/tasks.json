{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run build_runner build",
      "type": "shell",
      "isBackground": true,
      "command": "dart run build_runner build --delete-conflicting-outputs"
    },
    {
      "label": "Run build_runner clean",
      "type": "shell",
      "isBackground": true,
      "command": "rm -rf build && find . -type f \\( -name \"*.*.dart\" \\) -delete"
    },
    {
      "label": "Run flutter pub upgrade --tighten",
      "type": "shell",
      "isBackground": true,
      "command": "flutter pub upgrade --tighten"
    },
    {
      "label": "Run Frontend OPENREMISE_FRONTEND_SMALL_SCREEN_WIDTH=800",
      "type": "shell",
      "isBackground": true,
      // https://stackoverflow.com/a/74783428/5840652
      "command": ". chromium.fish && flutter run -d chrome --dart-define=OPENREMISE_FRONTEND_DOMAIN=remise.local --dart-define=OPENREMISE_FRONTEND_SMALL_SCREEN_WIDTH=800"
    },
    {
      "label": "Run Frontend OPENREMISE_FRONTEND_FAKE_SERVICES=true OPENREMISE_FRONTEND_SMALL_SCREEN_WIDTH=800",
      "type": "shell",
      "isBackground": true,
      // https://stackoverflow.com/a/74783428/5840652
      "command": ". chromium.fish && flutter run -d chrome --dart-define=OPENREMISE_FRONTEND_DOMAIN=remise.local --dart-define=OPENREMISE_FRONTEND_FAKE_SERVICES=true --dart-define=OPENREMISE_FRONTEND_SMALL_SCREEN_WIDTH=800"
    },
    {
      "label": "Run Python http.server docs",
      "type": "shell",
      "isBackground": true,
      "command": "python -m http.server --directory ${workspaceFolder}/build/docs/html --bind 127.0.0.1"
    },
    {
      "label": "Run Python http.server web",
      "type": "shell",
      "isBackground": true,
      "command": "python -m http.server --directory ${workspaceFolder}/build/web --bind 127.0.0.1"
    }
  ]
}